{
	"scopeName": "source.mca",
	"name": "MarCembly",
	"patterns": [
		{ "include": "#strings" },
		{ "include": "#opcodes" },
		{ "include": "#comments" },
		{ "include": "#datatypes" },
		{ "include": "#registers" },
		{ "include": "#directives" }
	],
	"repository": {
		"strings": {
			"name": "string.quoted.double.marcembly",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.marcembly",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.marcembly",
			"begin": "/",
			"end": "\n",
			"patterns": [
				{
					"name": "constant.character.escape.marcembly",
					"match": "\\\\."
				}
			]
		},
		"opcodes": {
			"patterns": [{
				"name": "keyword.opcodes",
				"match": "\\b(mov|add|sub|mul|div|conv|push|pop|pushc|popc|pushf|popf|jmp|jeq|jne|exit)\\b"
			}]
		},
		"datatypes": {
			"patterns": [{
				"name": "invalid.datatypes",
				"match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|addr)\\b"
			}]
		},
		"registers": {
			"patterns": [{
				"name": "variable.registers",
				"match": "\\b(sp|fp|lc|ac|cp|ec)\\b"
			}]
		},
		"directives": {
			"patterns": [{
				"name": "variable.directives",
				"match": "\\b(label|alias)\\b"
			}]
		}
	}
}